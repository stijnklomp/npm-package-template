{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./build",
		"lib": ["ES2021"],
		"module": "commonjs",
		"target": "ES2021",
		"strict": true,
		"moduleResolution": "node",
		"typeRoots": ["node_modules/@types"],
		"declaration": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "build"]
}
